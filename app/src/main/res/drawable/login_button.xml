<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dp" />
            <gradient android:angle="-90" android:startColor="@color/colorNameTwo"
                android:endColor="@color/colorName"
                android:type="linear"/>
        </shape>
    </item>

    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="40dp" />
            <gradient android:startColor="@color/colorName"
                android:endColor="@color/colorNameTwo"
                android:type="linear"/>
        </shape>
    </item>
</selector>